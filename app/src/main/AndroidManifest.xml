<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abdelrahman.myshoppal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShopPal">
        <activity android:name=".ui.activities.MyOrdersDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar"
            ></activity>
        <activity
            android:name=".ui.activities.SoldProductDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />

        <activity
            android:name=".ui.activities.CheckoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.AddEditAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.AddressListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.CartListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.ProductDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.AddProductActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.DashBoardActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.activities.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.ForgotPassword"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyShopPal.NoActionBar">
            >
        </activity>
        <activity
            android:name=".ui.activities.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>